body, html {
  margin: 0;
  padding: 0;
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(135deg, #fbc2eb, #a6c1ee);
  height: 100%;
  overflow: hidden;
  text-align: center;
}

.screen {
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

button {
  padding: 12px 25px;
  margin-top: 20px;
  border: none;
  border-radius: 20px;
  background: #ff4f8b;
  color: white;
  font-size: 18px;
  cursor: pointer;
  transition: 0.3s;
}
button:hover {
  background: #e63e75;
}

img {
  max-height: 200px;
}

.heart {
  position: absolute;
  font-size: 30px;
  animation: fall 4s linear forwards;
}
@keyframes fall {
  from { top: 0; }
  to { top: 100%; }
}

.kiss {
  position: absolute;
  font-size: 25px;
  animation: float 5s linear infinite;
}
@keyframes float {
  from { transform: translateY(0); }
  to { transform: translateY(-100vh); opacity: 0; }
}
